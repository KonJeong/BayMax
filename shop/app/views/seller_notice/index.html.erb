	<th width="10%" align="center"> 삭제 </td>
	<th width="10%" align="center"> 상품 관리 </td>
   </tr>

   <% @noticeList.each do |notice| %>
    <tr>
     <td align="center"><%= notice.id %></td>
     <td align="center"><%= notice.Category %></td>
     <td width=10% align="center"><%= link_to image_tag(notice.picture.url, size:"100"), notice_main_path(:param_noticeid => notice.id) %></td>
     <td width=40% align="center"><%= link_to notice.Title, notice_main_path(:param_noticeid => notice.id), {:style=>'color:#000000; text-decoration:none;'} %></td>
     <td align="center"><%= link_to image_tag("update.jpg", size:"75x25"), edit_seller_notice_path(notice.id), target:"main_body" %></td>
	 <td align="center"><%= link_to image_tag("delete.jpg", size:"75x25"), seller_notice_path(notice.id), method: :delete, data: { confirm: '정말로 삭제하시겠습니까?'} %></td>
	 <td align="center"><%= link_to image_tag("deal.jpg", size:"75x25"), product_index_path(:param_noticeid => notice.id) %> </td>
	 </tr>
   <% end %>
  </table>
 </tr> 
