<html>
<head></head>
<body scrolling=yes>
	<%= form_for :article, url: {action: "create"} do |f| %>
	<table align="center" width="100%" height="100%" border="0" cellspacing="0" cellpadding="0">
	<tr>
		<td><br><font size=5, color="#662500"><b>Q&A 등록</b></font><br><br><br></td>
	</tr>
	<tr>
		<td align="center">
		<table width="90%" border="1" cellspacing="0" cellpadding="10" style="border-collapse:collapse;">
			<tr>
			<td align="center" width="23%"><font size=5>종류</font></td>
			<td width="77%">&nbsp;&nbsp;&nbsp;<%= f.select :Category,
			options_for_select(["선택하세요", "상품문의", "배송문의", "교환문의", "반품문의", "기타문의"], :disabled => ["선택하세요"], :selected => ["선택하세요"]) %></td>
			</tr>

			<tr>
			<td align="center" width="23%"><font size=5>제목</font></td>
			<td width="77%">&nbsp;&nbsp;&nbsp;<%= f.text_field :Title, maxlength:50 %></td>
			</tr>

			<tr>
			<td align="center" width="23%"><font size=5>내용</font></td>
			<td width="77%">&nbsp;&nbsp;&nbsp;<%= f.text_area :Contents, size:"50x30" %></td>
			</tr>

			
		</table></td>
	</tr>

	<tr>
		<td align="center"><%= f.hidden_field :Notice_id, :value => params[:param_id] %>
		<br><br><%= f.submit '확인' %>&nbsp;&nbsp;&nbsp;<%= f.submit '취소' %>
	</td>
	</tr>
 
	</table>
	<% end %>
</body>
</html>
